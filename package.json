{
    "private": true,
    "workspaces": [
      "server",
      "client"
    ],
    "devDependencies": {
      "concurrently": "^6.5.1"
    },
    "scripts": {
      "dev": "npm --workspace server run dev",
      "start:server": "npm --workspace server run start",
      "start:client": "npm --workspace client run start",
      "start": "concurrently \"npm run start:server\" \"npm run start:client\""
    }
  }